// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Counter {
    uri       String    @id
    name      String
    value     Int       @default(0)
}

model Timer {
    id        String    @id
    name      String
    value     Int       @default(0)
}

enum JobApplicationStatus {
    Pending
    InterviewPending
    Success
    Rejected
}

model JobApplication {
    id          String    @id
    status      JobApplicationStatus
    name        String
    description String
    url         String
}
